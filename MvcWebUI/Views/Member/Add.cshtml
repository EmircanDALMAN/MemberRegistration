@model MvcWebUI.Models.MemberAddViewModel

@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <title>title</title>
    <link href="~/Content/bootstrap.min.css" rel="stylesheet" />
</head>
<body class="bg-light">

    <div class="container">
        <main>
            <div class="py-5 text-center">
                <h2>Kayıt Formu</h2>
                <p>Bilgileri Eksiksiz Giriniz..</p>
                <p class="lead">@Html.ValidationMessage("MemberException")</p>
            </div>

            <div class="row g-3">
                
                <div class="col-md-12">
                    <h4 class="mb-3">Bilgileriniz</h4>
                    @using (Html.BeginForm())
                    {

                        <div class="row g-3">
                            <div class="col-sm-6">
                                <label for="firstName" class="form-label">Adınız</label>
                                <input type="text" class="form-control" id="firstName" name="member.firstName" placeholder="Adınız" value="">
                            </div>
                            <div class="col-sm-6">
                                <label for="lastName" class="form-label">Soyadınız</label>
                                <input type="text" class="form-control" id="lastName" name="member.lastName" placeholder="Soyadınız" value="">
                            </div>

                            <div class="col-12">
                                <label for="tcNo" class="form-label">TC Kimlik Numarası</label>
                                <div class="input-group has-validation">
                                    <span class="input-group-text"></span>
                                    <input type="text" class="form-control" id="tcNo" name="member.tcNo" placeholder="TC Kimlik Numarası">
                                </div>
                            </div>

                            <div class="col-12">
                                <label for="email" class="form-label">Email <span class="text-muted">(Optional)</span></label>
                                <input type="email" class="form-control" id="email" name="member.email" placeholder="you@example.com">
                            </div>

                            <div class="col-12">
                                <label for="dateOfBirth" class="form-label">Doğum Tarihiniz</label>
                                <input type="text" class="form-control" id="dateOfBirth" name="member.dateOfBirth" placeholder="11/22/1998">
                            </div>
                        </div>
                        <button class="w-100 btn btn-primary btn-lg" type="submit">Kayıt Ol</button>
                    }
                </div>
            </div>
        </main>
    </div>
</body>
</html>